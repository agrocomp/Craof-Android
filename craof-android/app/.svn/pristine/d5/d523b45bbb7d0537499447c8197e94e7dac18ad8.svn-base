<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição do Destino"
        android:textSize="30dip"
        android:id="@+id/textView12"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Local"
        android:id="@+id/textViewLocalDestino"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView12"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/btDestinoVisualizarVoltar"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btDestinoVisualizarCancelar"
        android:layout_toStartOf="@+id/btDestinoVisualizarCancelar"
        android:layout_marginBottom="42dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btDestinoVisualizarCancelar"
        android:layout_alignTop="@+id/btDestinoVisualizarVoltar"
        android:layout_toLeftOf="@+id/btDestinoVisualizarSalvar"
        android:layout_toStartOf="@+id/btDestinoVisualizarSalvar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/btDestinoVisualizarSalvar"
        android:layout_alignTop="@+id/btDestinoVisualizarCancelar"
        android:layout_alignRight="@+id/textView12"
        android:layout_alignEnd="@+id/textView12" />
</RelativeLayout>