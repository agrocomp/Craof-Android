<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:id="@+id/progressBar5"
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:layout_gravity="center_horizontal"
        android:indeterminate="false"
        android:max="4"
        android:progress="3"
        android:layout_below="@+id/textView39"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Etapa 3/4"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Produtos utilizados"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dip"
        android:layout_below="@+id/progressBar5"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView7"
        android:layout_below="@+id/textView40"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btProduzirInsumoProdutosCancelar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btProduzirInsumoProdutosCancelar"
        android:layout_alignBottom="@+id/btProduzirInsumoProdutosVoltar"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/btProduzirInsumoProdutosVoltar"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btProduzirInsumoProdutosCancelar"
        android:layout_toStartOf="@+id/btProduzirInsumoProdutosCancelar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PrÃ³ximo"
        android:id="@+id/btProduzirInsumoProdutosProximo"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/textView40"
        android:layout_alignEnd="@+id/textView40" />
</RelativeLayout>