<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição do Local"
        android:textSize="30dip"
        android:id="@+id/textView10"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Local"
        android:id="@+id/etLocal"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:id="@+id/btLocalVisualizarCancelar"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/btLocalVisualizarVoltar"
        android:layout_toRightOf="@+id/btLocalVisualizarVoltar"
        android:layout_toEndOf="@+id/btLocalVisualizarVoltar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/btLocalVisualizarSalvar"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/btLocalVisualizarVoltar"
        android:layout_toRightOf="@+id/btLocalVisualizarCancelar"
        android:layout_toEndOf="@+id/btLocalVisualizarCancelar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/btLocalVisualizarVoltar"
        android:layout_marginBottom="69dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />
</RelativeLayout>