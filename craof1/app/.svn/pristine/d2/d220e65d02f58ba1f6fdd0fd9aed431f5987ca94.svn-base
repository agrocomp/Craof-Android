<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/image"
    >


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/cultura"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/insumos"
        android:layout_above="@+id/textView2"
        android:layout_alignStart="@+id/imageButton3" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/destino"
        android:layout_above="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/insumosp"
        android:layout_below="@+id/textView2"
        android:layout_toStartOf="@+id/textView3" />


    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/compra"
        android:layout_above="@+id/textView5"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CRAOF"
        android:textSize="60dp"
        android:textColor="#fff"
        android:textStyle="italic|bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Controle de Plantio"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButton4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Aplicação de Insumos"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView3"
        android:layout_above="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Compra de Insumos"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageButton5"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/imageButton5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Colheita e Destino dos Produtos"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageButton3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Insumos produzidos"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView6"
        android:layout_below="@+id/imageButton4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="na Propriedade"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
