    private void selecionarActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_selecionarActionPerformed
        if (frame instanceof SegundaTela) {
            buscar.setVisible(false);
            selecionar.setVisible(false);
            wscultura.setVisible(false);
            alterar.setVisible(true);
            excluir.setVisible(true);
            cancelar2.setVisible(false);
            cancelar1.setVisible(true);
            wtNome.setText(listaCultura.get(wtbcultura.getSelectedRow()).getNome());
            novo.setVisible(false);
            ((SegundaTela) frame).corrigir();
        } else {
            FrameAuxiliar c = (FrameAuxiliar) frame;
            int line = wtbcultura.getSelectedRow();
            if (line >= 0) {
                Cultura cultura = new Cultura();
                cultura.setCodigo((Integer) wtbcultura.getValueAt(line, 0));
                cultura.setNome((String) wtbcultura.getValueAt(line, 1));
                if (c.getPanel() instanceof ControlePlantio) {
                    ((ControlePlantio) c.getPanel()).setCultura(cultura);
                } else if (c.getPanel() instanceof AplicacaoInsumo) {
                    ((AplicacaoInsumo) c.getPanel()).setCultura(cultura);
                } else if (c.getPanel() instanceof DestinoProdutos) {
                    ((DestinoProdutos) c.getPanel()).setCultura(cultura);
                }
            } else {

            }
            c.fechar();
        }
    }//GEN-LAST:event_selecionarActionPerformed

