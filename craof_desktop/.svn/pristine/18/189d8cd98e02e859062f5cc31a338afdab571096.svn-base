    private void obterRelatorioActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_obterRelatorioActionPerformed
        controle = new Controle_Destino_Produtos();
        listaDestinoProdutos = new ArrayList();
        try {
            listaDestinoProdutos = controle.obterRelatorio(wtDataInicial.getText().toString(), wtDataFinal.getText().toString());
            System.out.println(listaDestinoProdutos.size());
            DefaultTableModel model = (DefaultTableModel) wtbRelatorio.getModel();
            model.getDataVector().removeAllElements();
            for (DestinoProduto aux : listaDestinoProdutos) {
                model.addRow(new Object[]{aux.getId_destinoProduto(), aux.getDataColheita(), aux.getCultura().getNome(), aux.getQuantidade(), aux.getLocalPlantio().getDescricao(), aux.getLocalDestino().getDescricao()});
            }
        } catch (ParseException | SQLException ex) {
            Logger.getLogger(DestinoProdutosBuscar.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_obterRelatorioActionPerformed

