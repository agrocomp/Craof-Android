    private void inicializar() {
        controle = new Controle_CRUD_Destino();
        listaLocalDestino = new ArrayList();
        usuario = new Usuario();
        localDestino = new LocalDestino();
        usuario.setId(1);
        localDestino.setDescricao(wtNome.getText().toString().toUpperCase());
        try {
            listaLocalDestino = controle.buscarTodos(localDestino, usuario);
            System.out.println(listaLocalDestino.size());
            DefaultTableModel model = (DefaultTableModel) wtblocal.getModel();
            model.getDataVector().removeAllElements();
            for (LocalDestino aux : listaLocalDestino) {
                model.addRow(new Object[]{aux.getId_localDestino(), aux.getDescricao()});
            }
        } catch (SQLException ex) {
            Logger.getLogger(PanelCulturaBuscar.class.getName()).log(Level.SEVERE, null, ex);
        }

        alterar.setVisible(false);
        excluir.setVisible(false);
        cancelar1.setVisible(false);
        wlCodigo.setVisible(false);
        wtCodigo.setVisible(false);

    }

