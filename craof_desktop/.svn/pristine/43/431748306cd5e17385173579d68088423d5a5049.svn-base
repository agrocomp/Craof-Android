    private void obterRelatorioActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_obterRelatorioActionPerformed
        controle = new Controle_Insumos_Produzidos();
        listaProducaoInsumos = new ArrayList();
        try {
            listaProducaoInsumos = controle.obterRelatorio(wtDataInicial.getText().toString(), wtDataFinal.getText().toString());
            System.out.println(listaProducaoInsumos.size());
            DefaultTableModel model = (DefaultTableModel) wtbRelatorio.getModel();
            model.getDataVector().removeAllElements();
            for (ProducaoInsumo aux : listaProducaoInsumos) {
                String produtosUtilizados = "";
                for(Insumo i : aux.getInsumo().getListaInsumo()){
                    produtosUtilizados += i.getDescricao() + ", \n";
                }
                model.addRow(new Object[]{aux.getId_producaoInsumo(), aux.getData(), aux.getInsumo().getDescricao(), aux.getQuantidade(),produtosUtilizados});
            }
        } catch (ParseException | SQLException ex) {
            Logger.getLogger(DestinoProdutosBuscar.class.getName()).log(Level.SEVERE, null, ex);
        }
    }//GEN-LAST:event_obterRelatorioActionPerformed


